<div class='row'>
<% @hostname = request.host
	@portnum =  request.port
	if @hostname == "localhost"
	
		myhost = @hostname+":"+@portnum.to_s
	
	else
	
		myhost = @hostname

	end

%>
	<div class="small-8 small-centered columns">

		<h3>Edit User</h3>
		<form method="post" action="http://<%= myhost %>/brokers/edit_password" id="change_password"> 
		 <div class="field">
			<label for="email">Email</label>
				<br>
				<input id="email" type="text" readonly="" name="email" autofocus="autofocus" value="<%= @broker.email %>">
		</div>

		<div class="field">
			 <label for="password">Change Password</label>
				<br>
				<input id="password" type="password" name="password" autofocus="autofocus">
		</div>

		<div class="field">
			<label for="cpassword">Confirm Password</label>
			<br>
			<input id="cpassword" type="password" name="cpassword" autofocus="autofocus">
		</div>
		<input type="hidden" name="id" value="<%= @broker.id %>">

		
		
	
		 
		<div class="actions">
		   <input type="button" value="SUBMIT" class="tiny button success" onclick="return check_passwords()">
		  </div>
		  </form>
	</div>
</div>
