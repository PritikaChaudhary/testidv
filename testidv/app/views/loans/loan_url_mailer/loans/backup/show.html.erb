<script>
function handleMainImage(files) {
  for (var i = 0; i < files.length; i++) {
    var file = files[i];
    var imageType = /image.*/;
    
    if (!file.type.match(imageType)) {
      continue;
    }
    
    var img = document.createElement("img");
    img.classList.add("obj");
    img.file = file;
    mainDiv = document.getElementById("main_image_preview");
    mainDiv.innerHTML = '';
    
    mainDiv.appendChild(img); // Assuming that "preview" is a the div output where the content will be displayed.
    
    var reader = new FileReader();
    reader.onload = (function(aImg) { return function(e) { aImg.src = e.target.result; }; })(img);
    reader.readAsDataURL(file);
  }
}

function hide_file(id)
{
	if(confirm('Are you sure? You want to hide this file')){
		var data = "&id=" + id;
		$.ajax({
	            data: data,
	            type: 'POST',
	            url: '/loans/hide_file',
	            success:function(response){
	            	$('#showfor_'+id).show();
	            	$('#hidefor_'+id).hide();
	           }
	        });
	}
}

function show_file(id)
{
	var data = "&id=" + id;
	$.ajax({
            data: data,
            type: 'POST',
            url: '/loans/show_file',
            success:function(response){
            	$('#hidefor_'+id).show();
	            $('#showfor_'+id).hide();
        	}
        });
}

function del_file(id)
{
	var data = "&id=" + id;
	$.ajax({
            data: data,
            type: 'POST',
            url: '/loans/del_file',
            success:function(response){
           		$('#del_'+id).hide();
        	}
        });
}

</script>
