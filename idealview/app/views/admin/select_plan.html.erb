<style type="text/css">
	.half_text
	{
		width : 50%;
		float: left;
	}
</style>
<div class='row'>
	<div class="small-8 small-centered columns">

		<h3>Select Plan</h3>
		  

<form action="" method="POST" id="payment-form">
  <span class="payment-errors"></span>

  <div class="form-row">
    <label>
      <span>Card Number</span>
      <input type="text" size="20" data-stripe="number"/>
    </label>
  </div>

  <div class="form-row">
    <label>
      <span>CVC</span>
      <input type="text" size="4" data-stripe="cvc"/>
    </label>
  </div>

  <div class="form-row">
    <label>
      <span>Expiration (MM/YYYY)</span>

      <input type="text" size="2" data-stripe="exp-month" class="half_text" />
       <span> / </span>
    <input type="text" size="4" data-stripe="exp-year" class="half_text"/>
    </label>
   
  </div>

  <button type="submit">Submit Payment</button>
</form>


	</div>
</div>
